<Window x:Class="WpfJordy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="red Jordy" Height="800" Width="760" MinWidth="400" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Beige">
            <Image Source="img/logo.png" HorizontalAlignment="Left" Margin="20,10" Width="100"/>
            <TextBlock Text="red Jordy" FontSize="36" FontFamily="Brush Script MT" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Button Content="LOGIN" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="15" Padding="10,2" Background="LightGray" BorderThickness="0" />
        </Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <WrapPanel HorizontalAlignment="Center">
                    <Border Margin="5" Background="Gray">
                        <Image Source="img/jordy1.jpg" Width="160" Height="120" Stretch="UniformToFill"/>
                    </Border>
                    <Border Margin="5" Background="Gray">
                        <Image Source="img/jordy2.jpg" Width="160" Height="120" Stretch="UniformToFill"/>
                    </Border>
                    <Border Margin="5" Background="Gray">
                        <Image Source="img/jordy3.jpg" Width="160" Height="120" Stretch="UniformToFill"/>
                    </Border>
                    <Border Margin="5" Background="Gray">
                        <Image Source="img/jordy4.jpg" Width="160" Height="120" Stretch="UniformToFill"/>
                    </Border>
                </WrapPanel>
                <Grid Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="10" VerticalAlignment="Top" FontSize="14">
                        <Bold>Naam:</Bold> Jordy<LineBreak/>
                        <Bold>Leeftijd:</Bold> 6 maanden<LineBreak/>
                        <Bold>Geslacht:</Bold> mannetje<LineBreak/>
                        <Bold>Gewicht:</Bold> 12kg
                    </TextBlock>

                    <TextBlock Grid.Column="1" Margin="10" TextWrapping="Wrap" LineHeight="20" FontSize="14">
                        Hallo, ik ben Jordy! Ik hou van wandelen, kinderen en andere huisdieren. Ad veertien er al slaagden resident. Waaronder eindelijk schatkist mee men wat britschen visschers. Is om te markten streken en vrouwen.
                    </TextBlock>
                </Grid>
                <TextBlock Text="Wordt Jordy jouw nieuw maatje? Stuur hem een bericht!" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,10" FontSize="16" />

                <StackPanel MaxWidth="500" HorizontalAlignment="Center">
                    <Label Content="Naam:"/>
                    <TextBox Margin="0,0,0,10" Foreground="Gray" Text="jouw naam"/>

                    <Label Content="Straat:"/>
                    <TextBox Margin="0,0,0,10" Foreground="Gray" Text="jouw straat"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="2" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Postcode:"/>
                            <TextBox Foreground="Gray" Text="b.v. 2500"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Gemeente:"/>
                            <TextBox Foreground="Gray" Text="b.v. Lier"/>
                        </StackPanel>
                    </Grid>

                    <Label Content="Bericht:" Margin="0,10,0,0"/>
                    <TextBox Height="100" TextWrapping="Wrap" AcceptsReturn="True" Foreground="Gray" Text="..."/>

                    <Button Content="VERZENDEN" HorizontalAlignment="Right" Margin="0,10" Padding="15,5" Background="LightGray" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="2" Background="Beige" Text="copyright 2024, verbond van dakloze dieren" 
                   FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>


