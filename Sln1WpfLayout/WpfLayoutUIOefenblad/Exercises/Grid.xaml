<Page x:Class="WpfLayoutUIOefenblad.Exercises.Grid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLayoutUIOefenblad.Exercises"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Grid">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="fraAssignment" Grid.Row="0" Grid.Column="0" Background="#eeeeee" />

        <Grid Grid.Row="1" Background="#F3F3F3" Width="500" Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#CDEFFD" Padding="5" FontWeight="SemiBold">HEADER - vaste hoogte van 40px, over 2 kolommen</TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" Background="#EFCDFD" Padding="10" TextWrapping="Wrap" FontSize="10">
                ZIJBALK — neemt een kwart van de breedte in
            </TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="1" Background="#FEEDFD" Padding="10" TextWrapping="Wrap" FontSize="10">
                CONTENT — neemt driekwart van de breedte in
            </TextBlock>

            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#CDFDEF" Padding="5" FontSize="8" FontStyle="Italic" TextAlignment="Center">footer - passend, over 2 kolommen, gecentreerd</TextBlock>
        </Grid>
    </Grid>
</Page>
